
<script type="text/javascript">

    function editEmployee(id) {
        var url = "/Employee/EditEmployee";
        $.get(url, { id: id }, function (data) {
            $("#editEmployee").html(data);
            $("#editEmployee").modal('show');
        });
    }

    function assignTask(id) {
        var url = "/Employee/AssignTask";
        $.get(url, { id: id }, function (data) {
            $("#assignTask").html(data);
            $("#assignTask").modal('show');
        });
    }

    function taskList(id) {
        var url = "/Employee/TaskList";
        $.get(url, { id: id }, function (data) {
            $("#taskList").html(data);
            $("#taskList").modal('show');
        });
    }

</script>



@{
    ViewBag.Title = "Roles";
}


<script type="text/javascript">

    function editRole(id) {
        var url = "/Role/EditRole";
        $.get(url, { id: id }, function (data) {
            $("#editRole").html(data);
            $("#editRole").modal('show');
        });
    }

</script>

<div class="row border-bottom">
    <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
        </div>
        <ul class="nav navbar-top-links navbar-right">
            <li>
                <span class="m-r-sm text-muted welcome-message"> </span>
            </li>
            <li class="dropdown">
                <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                </a>
            </li>
        </ul>
    </nav>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        @using (Ajax.BeginForm("EmployeeDetail", "Employee", new AjaxOptions { }))
                        {
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label" for="status">ROLE</label>
                                    <input type="text" class="form-control" name="role" id="role" placeholder="ROLE" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div style="margin-top:20px">
                                    <input type="submit" runat="server" class="btn btn-w-m btn-primary" value="FILTER" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    <input type="button" class="btn btn-primary" value="ADD ROLE" onclick="location.href='@Url.Action("CreateRole","Role")'" />
</p>

<table id="employee" class="table table-striped table-bordered" style="margin-top:10px;">
    <thead class="table-active">
        <tr>
            <th>
                ROLE
            </th>
            <th>
                DESCRIPTION
            </th>
            <th>
                DATE CREATED
            </th>
            <th></th>
        </tr>
    </thead>
    <tr>
        <td>
            ROLE
        </td>
        <td>
            ROLE
        </td>
        <td>
            ROLE
        </td>
        <td>
            <button type="button" class="btn btn-primary" onclick="editRole(1)">EDIT ROLE</button>
            <div class="modal fade" id="editRole" role="dialog"></div>
        </td>
    </tr>
</table>


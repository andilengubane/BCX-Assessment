@model BusinesConnexion.DTO.EmployeeDOT
@{
    ViewBag.Title = "CreateEmployee";
}

<div class="row border-bottom">
    <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary" href="#"><i class="fa fa-bars"></i> </a>
        </div>
        <ul class="nav navbar-top-links navbar-right">
            <li>
                <span class="m-r-sm text-muted welcome-message"> </span>
            </li>
            <li class="dropdown">
                <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                </a>
            </li>
        </ul>
    </nav>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>ADD INVENTORY ITEMS</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <form>
                                @using (Html.BeginForm("SaveInventory", "Inventory", FormMethod.Post, new { enctype = "multipart/Form-data" }))
                                {
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="name">FIRST NAME</label>
                                            @Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control", id = "inventoryName", autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.EmployeeName, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="description">LAST NAME</label>
                                            @Html.TextBoxFor(m => m.EmployeeLast, new { @class = "form-control", id = "supplier", autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.EmployeeLast, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="serialnumber"></label>
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", id = "inventorySerialnumber", autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="inputState">GENDER</label>
                                            @Html.DropDownListFor(m => m.GengerId, Model.Gender, "   SELECT INVENTORT TYPE   ", new { id = "inventoryType", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="inputState">EMPLOYEE ROLE</label>
                                            @Html.DropDownListFor(m => m.RileId, Model.Role, "   SELECT INVENTORT TYPE   ", new { id = "inventoryType", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="serialnumber"></label>
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", id = "inventorySerialnumber", autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                        </div>
                                       
                                        <div class="form-group col-md-6">
                                            <label for="model">ID NUMBER</label>
                                            @Html.TextBoxFor(m => m.IdNumber, new { @class = "form-control", id = "inventoryModel", autocomplete = "on" })
                                            @Html.ValidationMessageFor(m => m.IdNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <button type="submit" onclick="SaveInventory()" class="btn btn-primary">SUBMIT</button>
                                 }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>